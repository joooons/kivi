<GameScreen>:
    BoxLayout:
        orientation: "vertical"
        Image:
            source: 'images/sky.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 0.8
            canvas:
                Color:
                    rgba: 1, 1, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source: 'images/shikamaru_sprite.png'
                allow_stretch: True
                keep_ratio: False
                pos: app.square_pos['x'], app.square_pos['y']
                size: 200, 200
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: app.angle
                        axis: 0, 0, 1
                        origin: self.center
                canvas.after:
                    PopMatrix
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            Button:
                text: 'LEFT'
            Button:
                text: 'RIGHT'
            Button:
                text: 'Back to Main Menu'
                on_press: root.manager.current = 'menu'
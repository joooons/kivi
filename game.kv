#:import Sprite sprite.Sprite

<GameScreen>:
    BoxLayout:
        orientation: "vertical"
        Image:
            source: 'images/sky.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 0.8
            canvas:
                Color:
                    rgba: 1, 1, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            Sprite:

                id: shika
                source: 'images/shikamaru_sprite.png'
                allow_stretch: True
                keep_ratio: False
                pos: app.square_pos['x'], app.square_pos['y']
                size: 200, 200
                angle: 0

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            Button:
                text: 'LEFT'
                on_press: shika.start_rotation(2)
            Button:
                text: 'RIGHT'
                on_press: shika.rotate(-10)
            Button:
                text: 'Back to Main Menu'
                on_press: root.manager.current = 'menu'
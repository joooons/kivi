<TickButton@Button>:
    font_size: 100
    background_normal: ''
    background_down: ''
    background_color: 1, 0.5, 0, 1
    on_press:
        print('click')
        self.background_color = (1, 0.6, 0, 1)
    on_release: self.background_color = (1, 0.5, 0, 1)

<TickScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 100
        spacing: 50
        BoxLayout:
            spacing: 50
            TickButton:
                text: '1'
            TickButton:
                text: '2'
            TickButton:
                text: '3'
        BoxLayout:
            spacing: 50
            TickButton:
                text: '4'
            TickButton:
                text: '5'
            TickButton:
                text: '6'
        BoxLayout:
            spacing: 50
            TickButton:
                text: '7'
            TickButton:
                text: '8'
            TickButton:
                text: '9'
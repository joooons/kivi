<TickButton@Button>:
    font_size: 100
    background_normal: ''
    background_down: ''
    background_color: 1, 0.5, 0, 1
    size_hint: None, None
    size: self.parent.width * 0.3, self.parent.width * 0.3
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/o.png'
    on_press:
        print('click')
        self.background_color = (1, 0.6, 0, 1)
    on_release: self.background_color = (1, 0.5, 0, 1)

<TickScreen>:
    size_hint: 1, 1
    canvas.before:
        Color:
            rgba: 0.1, 0.2, 0.4, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        spacing: self.width * 0.05
        size_hint: None, None
        size: self.parent.width * 0.9, self.parent.width * 0.9
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        canvas.before:
            Color:
                rgba: 0.2, 0.4, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            pos_hint: {"center_x": 0.5}
            spacing: self.width * 0.05
            TickButton:
                text: '1'
            TickButton:
                text: '2'
            TickButton:
                text: '3'
        BoxLayout:
            spacing: self.width * 0.05
            TickButton:
                text: '4'
            TickButton:
                text: '5'
            TickButton:
                text: '6'
        BoxLayout:
            spacing: self.width * 0.05
            TickButton:
                text: '7'
            TickButton:
                text: '8'
            TickButton:
                text: '9'
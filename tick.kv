<TickButton@Button>:
    font_size: 100
    background_normal: ''
    background_down: ''
    background_color: 1, 1, 1, 0
    size_hint: None, None
    size: self.parent.width * 0.3, self.parent.width * 0.3
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/o.png'
    on_press:
        print('click')
        self.background_color = (1, 0.6, 0, 1)
    on_release: self.background_color = (1, 0.5, 0, 1)

<Filler_Col@Image>:
    size_hint: None, None
    size: self.parent.width * 0.05, self.parent.width * 0.3
    canvas:
        Color:
            rgba: 0.5, 0.8, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Filler_Row@Image>:
    size_hint: None, None
    size: self.parent.width, self.parent.width * 0.05
    canvas:
        Color:
            rgba: 0.5, 0.8, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TickScreen>:
    size_hint: 1, 1
    Image:
        source: './images/background_1.gif'
        fit_mode: 'cover'
        anim_delay: 0.1
        canvas.after:
            Color:
                rgba: 0.5, 0.8, 1, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation: "vertical"
        # spacing: self.width * 0.05
        size_hint: None, None
        size: self.parent.width * 0.9, self.parent.width * 0.9
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        BoxLayout:
            # pos_hint: {"center_x": 0.5}
            # spacing: self.width * 0.05
            TickButton:
            Filler_Col:
            TickButton:
            Filler_Col:
            TickButton:
        Filler_Row:
        BoxLayout:
            # spacing: self.width * 0.05
            TickButton:
            Filler_Col:
            TickButton:
            Filler_Col:
            TickButton:
        Filler_Row:
        BoxLayout:
            # spacing: self.width * 0.05
            TickButton:
            Filler_Col:
            TickButton:
            Filler_Col:
            TickButton: